<!DOCTYPE html>
<html>
<head>
  <title>SushiFabric</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div id="wrapper">
    <%= render 'shared/header' %>
    <div id="contents">

       <% if alert %>
       <p class="alert" onClick="$('.alert').slideUp()"><%= alert %></p>
       <% elsif notice %>
       <p class="notice" onClick="$('.notice').slideUp()"><%= notice %></p>
       <% end %>

       <%= yield %>

    </div>
    <%= render 'shared/footer' %>
  </div>

</body>
</html>
