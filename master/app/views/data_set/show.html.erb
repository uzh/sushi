<style>
/* M&M Generation Loading Overlay */
#mm-loading-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 9999;
  justify-content: center;
  align-items: center;
}
#mm-loading-overlay.active {
  display: flex;
}
#mm-loading-content {
  background: white;
  padding: 40px 60px;
  border-radius: 12px;
  text-align: center;
  box-shadow: 0 4px 20px rgba(0,0,0,0.3);
  max-width: 400px;
}
#mm-loading-content h3 {
  margin: 0 0 20px 0;
  color: #333;
}
#mm-loading-content p {
  color: #666;
  margin: 10px 0;
  font-size: 14px;
}
.mm-spinner {
  width: 50px;
  height: 50px;
  border: 4px solid #f3f3f3;
  border-top: 4px solid #3498db;
  border-radius: 50%;
  animation: mm-spin 1s linear infinite;
  margin: 0 auto 20px;
}
@keyframes mm-spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
.mm-steps {
  text-align: left;
  margin-top: 20px;
  padding: 15px;
  background: #f8f9fa;
  border-radius: 8px;
}
.mm-step {
  padding: 5px 0;
  color: #999;
}
.mm-step.active {
  color: #3498db;
  font-weight: bold;
}
.mm-step.done {
  color: #27ae60;
}
.mm-step::before {
  content: "‚óã ";
}
.mm-step.active::before {
  content: "‚óè ";
}
.mm-step.done::before {
  content: "‚úì ";
}
</style>

<script type="text/javascript">
$(document).ready(function(){
  var document_width=$("#contents").width();
  var table_width=$("#dataset_samples").width();
  if(table_width>document_width){
    $('.dt').DataTable({
      "scrollX": true,
      "columnDefs": [
